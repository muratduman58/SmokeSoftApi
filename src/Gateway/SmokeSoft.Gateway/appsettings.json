{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "SmokeSoft.ShadowGuard",
    "Audience": "SmokeSoft.Clients"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "shadowguard-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Metadata": {
          "RateLimit": "auth-policy"
        }
      },
      "shadowguard-route": {
        "ClusterId": "shadowguard-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/shadowguard/{**catch-all}"
        },
        "Metadata": {
          "RateLimit": "default-policy"
        }
      },
      "screenshots-route": {
        "ClusterId": "shadowguard-cluster",
        "Match": {
          "Path": "/api/screenshots/{**catch-all}"
        },
        "Metadata": {
          "RateLimit": "upload-policy"
        }
      },
      "websocket-route": {
        "ClusterId": "shadowguard-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/ws/{**catch-all}"
        }
      },
      "health-route": {
        "ClusterId": "shadowguard-cluster",
        "Match": {
          "Path": "/health"
        }
      }
    },
    "Clusters": {
      "shadowguard-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:01:00"
          }
        }
      }
    }
  }
}